<p>Singles games are one on one battles, first to 11 wins</p>

<%= form_for(@result.becomes(Result), :html => { :class => "form-horizontal" }) do |f| %>
  <% if @result.errors.any? %>
    <div id="error_explanation" class="alert">
      <ul>
      <% @result.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix purp-sep"></div>
  <div class="control-group">
    <%= f.label :home_player_id, :class => "controls-label", :style => "display: inline;" %>
    <div class="controls" style="display: inline;">
      <%= f.collection_select(:home_player_id, Player.find(:all, :order => "name ASC"), :id, :name) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :home_score, :class => "controls-label", :style => "display: inline;" %>
    <div class="controls" style="display: inline;">
      <%= f.number_field :home_score %>
    </div>
  </div>
  <div class="clearfix blue-sep"></div>
  <div class="control-group">
    <%= f.label :away_player_id, :class => "controls-label", :style => "display: inline;" %>
    <div class="controls" style="display: inline;">
      <%= f.collection_select(:away_player_id, Player.find(:all, :order => "name ASC"), :id, :name) %>
    </div>
  </div> 
  <div class="control-group">
    <%= f.label :away_score, :class => "controls-label", :style => "display: inline;" %>
    <div class="controls" style="display: inline;">
      <%= f.number_field :away_score %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', :class => 'btn btn-info' %>
  </div>
<% end %>
